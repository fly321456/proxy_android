<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#007ac0"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/guide_page_padding_bottom"
    android:paddingTop="@dimen/guide_page_padding_top" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/the_introductory_page_05" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/the_introductory_page_05_pic" />

</LinearLayout>