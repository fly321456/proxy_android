<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_item_service_introduce"
              android:layout_width="match_parent"
              android:layout_height="@dimen/space_size_30"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/text_accel_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/space_size_10"
        android:drawableLeft="@drawable/purchase_first_accelerated_service_ordinary_icon"
        android:drawablePadding="@dimen/space_size_8"
        android:text="@string/normal_accel"
        android:textColor="@color/color_game_7"
        android:textSize="@dimen/text_size_12"/>

    <ImageView
        android:id="@+id/normal_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/purchase_first_accelerated_service_yes_icon"/>

    <ImageView
        android:id="@+id/vip_user"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/purchase_first_accelerated_service_yes_icon"/>
    <cn.wsds.gamemaster.ui.view.TickView
        android:id="@+id/tick_view"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <cn.wsds.gamemaster.ui.view.TickViewAni
        android:id="@+id/tick_view_ani"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        />
</LinearLayout>

