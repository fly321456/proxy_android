<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_guid_remind">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
       
       <ImageView 
           android:id = "@+id/remind_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/space_size_34"/>  
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/guide_page_pic"/>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            
            <ImageView 
            android:id = "@+id/recharge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size_36"
            android:src = "@drawable/guide_page_illustration_2"/>
            
            <View 
                android:id="@+id/space_view"
                android:layout_width="@dimen/space_size_50"
                android:layout_height="@dimen/space_size_32"
                android:layout_alignParentTop="true"
                />
            
        </RelativeLayout>
    
        <ImageView 
            android:id = "@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size_24"/>
        
    </LinearLayout>
    
    <ImageView 
        android:id = "@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/space_size_10"
        android:layout_marginRight="@dimen/space_size_10"
        android:src="@drawable/guide_page_skip"
        />
    
</RelativeLayout>
