<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/whole_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:background="@color/selector_exchange_item_color"
              android:orientation="horizontal"
              android:paddingRight="@dimen/space_size_10">
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/text_exchange_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/convert_inte_tag"
            android:gravity="center_vertical"
            android:text="50积分"
            android:textColor="@color/color_game_17"
            android:textSize="@dimen/text_size_12"
            tools:ignore="HardcodedText"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="@dimen/space_size_36"
                android:layout_height="@dimen/space_size_36"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/list_item_margin_bottom"
                android:layout_marginLeft="@dimen/list_item_icon_margin_left"
                android:layout_marginRight="@dimen/list_item_icon_margin_right"
                android:layout_marginTop="@dimen/list_item_margin_top"
                android:scaleType="centerInside"
                android:src="@drawable/icon_present"
                tools:ignore="ContentDescription,RtlHardcoded"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/list_item_icon_margin_right"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/name_recommand_game"
                    android:textColor="@color/color_game_7"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/text_recommand_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_size_5"
                    android:singleLine="true"
                    android:text="推荐理由"
                    android:textColor="@color/color_game_31"
                    android:textSize="@dimen/text_size_12"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/button_exchange"
        android:layout_width="@dimen/list_item_text_width"
        android:layout_height="@dimen/list_item_text_height"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/list_item_margin_right"
        android:background="@drawable/main_list_start_btn_bg_translucent"
        android:gravity="center"
        android:text="立即兑换"
        android:textColor="@color/color_game_7"
        android:textSize="@dimen/text_size_14"
        tools:ignore="HardcodedText,RtlHardcoded"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:src="@drawable/game_detailed"/>
</LinearLayout>