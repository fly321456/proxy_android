<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/whole_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/space_size_80"
              android:background="@drawable/setting_item_bg"
              android:paddingRight="@dimen/space_size_10"
              android:paddingLeft="@dimen/space_size_12"
              android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="@dimen/space_size_52"
            android:layout_height="@dimen/space_size_52"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/list_item_icon_margin_right"
            android:src="@drawable/icon_flow"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription,RtlHardcoded"/>

       <TextView android:layout_width="wrap_content"
                 android:id="@+id/text_name"
                 android:layout_gravity="center_vertical"
                 android:ellipsize="end"
                 android:singleLine="true"
                 android:text="移动300M流量包"
                 android:textColor="@color/color_game_7"
                 android:textSize="@dimen/text_size_14"
                 android:layout_height="wrap_content"/>

</LinearLayout>