<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/color_game_32"
                      android:endColor="@color/color_game_32" />
        </shape>
    </item>

    <!--  设置进度条颜色  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <gradient  android:startColor="@color/color_game_11"
                           android:endColor="@color/color_game_46" />
            </shape>
        </clip>
    </item>

</layer-list>