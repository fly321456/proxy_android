<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/group_secondpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_size_15"
        android:scaleType="fitXY"
        android:src="@drawable/basepage_line_above" />

    <LinearLayout
        android:id="@+id/phone_number"
        style="@style/setting_group_style"
        android:layout_marginTop="0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_size_50"
            android:textColor="@color/color_game_7"
            android:textSize="@dimen/text_size_15"
            android:gravity="center_vertical"
            android:text="@string/setting_phone_number"/>

        <ViewFlipper
            android:id="@+id/view_flipper_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/setting_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_size_50"
                android:text="132****1765"
                android:textColor="@color/color_game_7"
                android:textSize="@dimen/text_size_15"
                android:layout_gravity="right"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/setting_phone_number_binding"
                android:layout_width="wrap_content"
                android:drawableRight="@drawable/game_detailed"
                android:layout_height="@dimen/space_size_50"
                android:text="@string/setting_phone_binding"
                android:textColor="@color/color_game_11"
                android:textSize="@dimen/text_size_15"
                android:layout_gravity="right"
                android:gravity="center_vertical"/>
        </ViewFlipper>
    </LinearLayout>

    <TextView
        android:id="@+id/setting_modify_password"
        style="@style/setting_item_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_size_50"
        android:text="@string/setting_modify_password"/>
    <TextView
        android:id="@+id/setting_point_history"
        style="@style/setting_item_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_size_50"
        android:text="@string/setting_point_history"/>

    <TextView
        android:id="@+id/setting_exit_login"
        style="@style/setting_group_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_size_50"
        android:gravity="center_horizontal|center"
        android:text="@string/setting_exit_login"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_15"/>

</LinearLayout>