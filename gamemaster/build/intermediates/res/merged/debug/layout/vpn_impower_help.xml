<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- 外面包了一层无用的容器是因为要做动画 -->

    <LinearLayout
        android:id="@+id/bar_vpn_impower_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_top_of_vpn_impower_toast"
        android:paddingLeft="@dimen/padding_left_of_vpn_impower_toast"
        android:paddingRight="@dimen/padding_left_of_vpn_impower_toast"
        android:paddingTop="@dimen/padding_top_of_vpn_impower_toast"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/text_vpn_impower_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dialog_header_icon"
            android:drawablePadding="@dimen/space_size_10"
            android:gravity="center"
            android:singleLine="true"
            android:text="勾选“我信任”点击“确定”开启加速"
            android:textSize="@dimen/font_size_of_vpn_impower_toast" />
    </LinearLayout>

</FrameLayout>