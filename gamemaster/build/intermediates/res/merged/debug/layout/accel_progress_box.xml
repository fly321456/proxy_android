<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accel_progress_box_bkgnd" >

    <View
        android:id="@+id/accel_progress_box_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/accel_progress_box_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_size_14"
        android:layout_marginRight="@dimen/space_size_10"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/accel_progress_box_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                android:textColor="@color/color_game_7"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/accel_progress_box_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/open_to_accelerate_the_progress_of_right"
                tools:ignore="RtlHardcoded,ContentDescription" />
        </RelativeLayout>

        <ViewStub
            android:id="@+id/accel_progress_box_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/accel_progress_box_second_line" />
    </LinearLayout>

</RelativeLayout>