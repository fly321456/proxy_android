<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignBottom="@+id/layout_remind"
        android:background="@drawable/dialog_floatwindow_help_background" />

    <LinearLayout
        android:id = "@+id/layout_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/pop_up_pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size_36"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/color_game_7"
            android:text = "恭喜您！"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_16"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_game_7"
            android:text = "您的设备支持高级加速哦！"
            />

        <TextView
            android:id="@+id/text_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size_10"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_game_7"
            android:text = "专为网游量身定制的黑科技，你值得拥有~"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/space_size_36"
            android:layout_marginBottom="@dimen/space_size_20"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/button_accel_normal"
                style="@style/dialog_button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/space_size_8"
                android:background="@drawable/selector_dialog_left_btn"
                android:text="普通加速" />

            <TextView
                android:id="@+id/button_to_vip"
                style="@style/dialog_button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_dialog_right_btn"
                android:text="前往了解" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
