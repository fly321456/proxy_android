<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_size_8"
    android:paddingRight="@dimen/space_size_8" >

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_height">

        <EditText
            android:id="@+id/edit_old_password"
            style="@style/login_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_old_eye"
            android:drawableLeft="@drawable/login_icon_password"
            android:hint="请输入旧的密码"
            android:inputType="textVisiblePassword"
            android:maxLength="32"/>

        <ImageView
            android:id="@+id/img_old_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_size_10"
            android:layout_marginRight="@dimen/space_size_10"
            android:background="@drawable/selector_simple"
            android:src="@drawable/login_btn_password_open" />
    </RelativeLayout>
    
     
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_height"
        android:layout_marginTop="@dimen/space_size_10" >

        <EditText
            android:id="@+id/edit_new_password"
            style="@style/login_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_new_eye"
            android:drawableLeft="@drawable/login_icon_password"
            android:hint="请输入新的密码"
            android:inputType="textVisiblePassword"
            android:maxLength="32"/>

        <ImageView
            android:id="@+id/img_new_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_size_10"
            android:layout_marginRight="@dimen/space_size_10"
            android:background="@drawable/selector_simple"
            android:src="@drawable/login_btn_password_open" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_update_password"
        style="@style/login_button"
        android:layout_width="@dimen/space_size_180"
        android:layout_height="@dimen/space_size_55"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_size_50"
        android:background="@drawable/selector_dialog_right_btn"
        android:text="修改密码" />


</LinearLayout>