<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/phone_and_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_size_8"
        android:layout_marginRight="@dimen/space_size_8"
        layout="@layout/phone_and_password" />

    <Button
        android:id="@+id/button_reset_password"
        style="@style/login_button"
        android:layout_width="@dimen/space_size_180"
        android:layout_height="@dimen/space_size_55"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_size_50"
        android:background="@drawable/selector_dialog_right_btn"
        android:text="密码重置" />


</LinearLayout>