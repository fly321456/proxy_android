<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/group_secondpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_size_15"
        android:scaleType="fitXY"
        android:src="@drawable/basepage_line_above" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_line"
        android:layout_below="@+id/top_line"
        android:paddingLeft="@dimen/space_size_20"
        android:paddingRight="@dimen/space_size_20"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_game_7"
            android:textSize="@dimen/text_size_14"
            android:text="Title" />

        <ImageView
            android:id="@+id/image_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:src="@drawable/message_hit_sdk_pic"
            android:layout_marginBottom="@dimen/space_size_10"
            android:layout_marginTop="@dimen/space_size_10"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_game_6"
            android:textSize="@dimen/text_size_14"
            android:lineSpacingExtra="@dimen/space_size_5"
            android:text="desc\ndesc" />
        
    </LinearLayout>

    <ImageView
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/space_size_5"
        android:scaleType="fitXY"
        android:src="@drawable/basepage_line_behind" />

</RelativeLayout>