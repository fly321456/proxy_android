<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/reconnect_time_delay_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="延迟重连" />

        <EditText
            android:id="@+id/reconnect_time_delay_true_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="结果序列" />

        <Button
            android:id="@+id/reconnect_time_delay_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TaskId1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/reconnect_time_delay_value2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="延迟重连" />

        <EditText
            android:id="@+id/reconnect_time_delay_true_value2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="结果序列" />

        <Button
            android:id="@+id/reconnect_time_delay_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TaskId2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/reconnect_time_delay_value3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="延迟重连" />

        <EditText
            android:id="@+id/reconnect_time_delay_true_value3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="结果序列" />

        <Button
            android:id="@+id/reconnect_time_delay_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TaskId3" />
    </LinearLayout>

    <Button
        android:id="@+id/reconnect_time_delay_launch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动游戏" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="并联加速设置：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_double_accel_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="游戏ID" />

        <EditText
            android:id="@+id/edit_double_accel_flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="流量消耗单位M" />

        <Button
            android:id="@+id/btn_double_accel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/check_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_size_4"
        android:text="“并网加速”不过滤机型" />

</LinearLayout>