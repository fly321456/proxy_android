<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/phone_and_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_size_8"
        android:layout_marginRight="@dimen/space_size_8"
        layout="@layout/phone_and_password" />

    <TextView
        android:id="@+id/text_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/space_size_20"
        android:layout_marginRight="@dimen/space_size_10"
        android:layout_marginTop="@dimen/space_size_14"
        android:text="忘记密码？"
        android:textColor="@color/color_game_31"
        android:textSize="@dimen/text_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textbutton_register"
            style="@style/login_button"
            android:layout_width="@dimen/space_size_150"
            android:layout_height="@dimen/space_size_55"
            android:background="@drawable/selector_dialog_left_btn"
            android:text="注册" />

        <TextView
            android:id="@+id/textbutton_login"
            style="@style/login_button"
            android:layout_width="@dimen/space_size_150"
            android:layout_height="@dimen/space_size_55"
            android:layout_marginLeft="@dimen/space_size_10"
            android:background="@drawable/selector_dialog_right_btn"
            android:text="登录" />
    </LinearLayout>

    <Space
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_marginBottom="@dimen/space_size_3"
                android:layout_weight="1"
                android:background="@color/color_game_9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_size_10"
                android:layout_marginRight="@dimen/space_size_10"
                android:text="第三方登录"
                android:textColor="@color/color_game_31"
                android:textSize="@dimen/text_size_12" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_marginBottom="@dimen/space_size_3"
                android:layout_weight="1"
                android:background="@color/color_game_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size_20"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/button_login_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/achieve_share_icon_weixin_bg" />

            <ImageView
                android:id="@+id/button_login_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_size_60"
                android:layout_marginRight="@dimen/space_size_60"
                android:scaleType="centerInside"
                android:src="@drawable/achieve_share_icon_qq_bg" />
            
            <ImageView
                android:id="@+id/button_login_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/achieve_share_icon_weibo_bg" />
            
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight="0.2" />

</LinearLayout>