<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/item_restart_accel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/child_item_history_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/space_size_8"
            android:src="@drawable/list_icon_restart"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="重新加速"
            android:textColor="@color/color_game_6"
            android:textSize="@dimen/text_size_14"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@drawable/item_record_divider"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/item_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/child_item_history_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_history_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/space_size_8"
            android:src="@drawable/list_icon_history"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/item_history_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/accel_desc"
            android:textColor="@color/color_game_6"
            android:textSize="@dimen/text_size_14"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>