<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/whole_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_game_item"
    android:orientation="horizontal" >

    <cn.wsds.gamemaster.ui.view.ImageViewAlpha
        android:id="@+id/image_icon"
        android:layout_width="@dimen/list_item_width"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/list_item_margin_bottom"
        android:layout_marginLeft="@dimen/list_item_margin_left"
        android:layout_marginRight="@dimen/list_item_margin_right"
        android:layout_marginTop="@dimen/list_item_margin_top"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_app_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_game_7"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/text_accel_model_label"
                style="@style/mark_on_main_page_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_size_5"
                android:background="@drawable/shape_label_accel_model"
                android:text="推荐VPN"
                android:textColor="#99b0f900"
                android:layout_marginRight="@dimen/space_size_4"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_overseas_game_label"
                style="@style/mark_on_main_page_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_size_5"
                android:background="@drawable/mark_on_main_page_list_bg_1"
                android:text="外服加速"
                android:textColor="@color/color_game_11"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/button_openapp"
        android:layout_width="@dimen/list_item_text_width"
        android:layout_height="@dimen/list_item_text_height"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/list_item_text_margin_right"
        android:background="@drawable/main_list_start_btn_bg_translucent"
        android:gravity="center"
        android:text="启动"
        android:textColor="@color/color_game_7"
        android:textSize="@dimen/text_size_14"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <ImageView
        android:id="@+id/game_detail_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/list_item_arrow_margin_right"
        android:src="@drawable/game_detailed"
        tools:ignore="ContentDescription,RtlHardcoded" />

</LinearLayout>