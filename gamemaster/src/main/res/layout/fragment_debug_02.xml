<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_size_8"
        android:background="@drawable/box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/space_size_4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/debug_button_toast_flow_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后台流量警告Toast"
                android:textSize="@dimen/text_size_14" />

            <CheckBox
                android:id="@+id/debug_checkbox_toast_flow_warning_gameself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏自身"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/debug_edit_toast_flow_warning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="设置警告阈值和参数"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/debug_button_toast_flow_warning_set_params"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置参数"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_size_4"
        android:layout_marginTop="@dimen/space_size_4"
        android:background="@drawable/box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/space_size_4" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/debug_button_all_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="所有特效"
                android:textSize="@dimen/text_size_14" />

            <Switch
                android:id="@+id/debug_switch_float_in_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/float_in_game"
                android:textSize="@dimen/text_size_14" />

            <Switch
                android:id="@+id/debug_switch_float_reconn_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/debug_switch_float_in_game"
                android:text="断线重连特效"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/net_delay"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/debug_edit_float_net_delay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="numberSigned"
                android:textSize="@dimen/text_size_14" >
            </EditText>

            <Button
                android:id="@+id/debug_button_float_net_delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/net_delay"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/debug_button_float_net_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/net_request"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/debug_button_toastex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="toast"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/debug_button_toast_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="toast(app)"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/debug_button_toast_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="toast(activity)"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/debug_screenshot_always_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截屏失败"
                android:textSize="@dimen/text_size_14" />

            <CheckBox
                android:id="@+id/debug_open_accel_always_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_size_16"
                android:text="开加速失败"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box"
        android:columnCount="3"
        android:gravity="center"
        android:padding="@dimen/space_size_4" >

        <Button
            android:id="@+id/debug_button_java_crash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Crash"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/debug_button_native_crash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native Crash"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/debug_button_anr_crash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANR Crash"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/debug_button_report_crash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主动上报Crash"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/debug_link_view_error_log"
            android:layout_gravity="center"
            android:text="【查看错误日志】"
            android:textColor="#ffe0e000" />

        <TextView
            android:id="@+id/debug_link_del_error_log"
            android:layout_gravity="center"
            android:text="删除日志"
            android:textColor="#ff800000" />
    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/debug_text_next_init_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="下次初始化错误码"
            android:textSize="@dimen/text_size_12" />

        <EditText
            android:id="@+id/debug_edit_next_init_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/debug_text_next_init_result"
            android:ems="2"
            android:inputType="numberSigned" />

        <Button
            android:id="@+id/debug_button_next_init_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/debug_text_next_init_result"
            android:layout_toRightOf="@id/debug_edit_next_init_result"
            android:text="确定"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/debug_button_init_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/space_size_8"
            android:text="初始化并完全退出"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

</LinearLayout>