<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/layout_goods"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/space_size_10"
        android:layout_marginRight="@dimen/space_size_10"
        android:layout_marginTop="@dimen/space_size_10"
        android:layout_marginBottom="@dimen/space_size_10"
        android:background="@color/color_game_9" />
    <TextView android:layout_width="wrap_content"
              android:id="@+id/text_goods_title"
              android:drawableLeft="@drawable/rectangle_color_11"
              android:drawablePadding="@dimen/space_size_8"
              android:layout_marginLeft="@dimen/space_size_18"
              android:layout_marginBottom="@dimen/space_size_8"
              android:textColor="@color/color_game_11"
              android:textSize="@dimen/text_size_14"
              android:text="礼包内容"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/text_content"
              android:layout_marginLeft="@dimen/space_size_18"
              android:textColor="@color/color_game_7"
              android:lineSpacingExtra="@dimen/space_size_8"
              android:text="星尘×20"
              android:textSize="@dimen/text_size_12"
              android:layout_height="wrap_content"/>
</LinearLayout>