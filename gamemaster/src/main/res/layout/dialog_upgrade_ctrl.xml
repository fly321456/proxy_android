<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_size_20"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/button_cancel"
            style="@style/dialog_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_weight="4"
            android:background="@drawable/selector_dialog_left_btn"
            android:text="暂不更新" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/button_ok"
            style="@style/dialog_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_weight="4"
            android:background="@drawable/selector_dialog_right_btn"
            android:text="立即更新" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/check_ignore_this_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:button="@drawable/checkbox_selector"
        android:text=" 忽略此版本"
        android:textColor="@color/color_game_31"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>