<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/whole_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_size_50"
    android:background="@color/about_list_bg_color"
    android:contentDescription="item double link"
    tools:ignore="Overdraw,RtlSymmetry" >

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/space_size_40"
        android:layout_height="@dimen/space_size_40"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="@dimen/space_size_20"
        android:layout_marginRight="@dimen/space_size_10"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/text_game_name"
        android:layout_width="@dimen/space_size_100"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_icon"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:maxWidth="@dimen/space_size_100"
        android:singleLine="true"
        android:text="游戏名称游戏"
        android:textColor="@color/color_game_7"
        android:textSize="@dimen/text_size_12"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@id/text_game_name"
                  android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_used_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="100次"
            android:textColor="@color/color_game_8"
            android:textSize="@dimen/text_size_12"/>

        <!--<TextView-->
            <!--android:id="@+id/text_used_flow"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="right"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="10.55M"-->
            <!--android:textColor="@color/color_game_11"-->
            <!--android:textSize="@dimen/text_size_12"/>-->
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/space_size_75"
        android:layout_alignParentBottom="true"
        android:layout_height="0.5dip"
        android:background="@color/color_game_4"/>

</RelativeLayout>