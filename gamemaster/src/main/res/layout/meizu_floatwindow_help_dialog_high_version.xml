<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/group_dialog_floatwindow_help_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/head_floatwindow_help_dialog" />

    <TextView
        android:id="@+id/notice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_size_14"
        android:gravity="center_vertical"
        android:text="启用悬浮窗"
        android:textColor="@color/color_game_11"
        android:textSize="@dimen/text_size_14"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/notice_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_margin="@dimen/space_size_14"
        android:src="@drawable/suspension_prompt_meizu"
        tools:ignore="ContentDescription" />

    <include 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/foot_dialog_floatwindow_help"/>

</LinearLayout>
