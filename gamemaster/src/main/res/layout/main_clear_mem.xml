<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_size_75"
    android:background="@color/color_game_48"
    android:minHeight="@dimen/space_size_75"
    android:orientation="horizontal" >


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/list_item_width"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:layout_marginLeft="@dimen/list_item_margin_left"
        android:layout_marginRight="@dimen/list_item_margin_right"
        android:src="@drawable/homepage_memory_ultra_tip_icon" />

    <TextView
        android:id="@+id/button_clean_memory"
        android:layout_width="@dimen/list_item_text_width"
        android:layout_height="@dimen/list_item_text_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_size_35"
        android:background="@drawable/seletor_clean_memory_text_border"
        android:gravity="center"
        android:text="清理"
        android:textColor="@color/color_game_7"
        android:textSize="@dimen/text_size_14"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/clean_memory_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_clean_memory"
        android:layout_toRightOf="@+id/imageView1"
        android:text="有xx个应用偷偷运行，影响游戏速度"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/color_game_6"
        android:textSize="@dimen/text_size_12"
        android:layout_marginRight="@dimen/space_size_10"
        tools:ignore="HardcodedText" />

</RelativeLayout>