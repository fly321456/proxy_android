<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/instruction_page_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_memory_clearup"
        style="@style/instruction_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_size_10"
        android:text="管理来电，防止游戏被弹出。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            style="@style/instructions_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/introdution_suspension_pic_4_bg" />

        <ImageView
            style="@style/instructions_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_size_24"
            android:src="@drawable/call_read_contact" />
    </RelativeLayout>

</LinearLayout>