<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_size_10"
        android:layout_marginTop="@dimen/space_size_8"
        android:layout_marginBottom="@dimen/space_size_8"
        android:contentDescription="@string/guide_close_nor"
        android:src="@drawable/guide_close_nor" />
    
     <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dilog_diver_width"
        android:background="@color/color_game_5" />
     
    <TextView
        android:id="@+id/text_mess"
        style="@style/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_size_20"
        android:layout_marginLeft="@dimen/space_size_18"
        android:layout_marginRight="@dimen/space_size_18"
        android:layout_marginTop="@dimen/space_size_18"
        android:gravity="left"
        android:text="@string/user_feedback" />

     <RadioGroup
            android:id = "@+id/group_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_size_18"
            android:layout_marginRight="@dimen/space_size_18"
            android:layout_marginBottom="@dimen/space_size_20"         
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radio_excellent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"           
                android:text="@string/excellent" />

            <RadioButton
                android:id="@+id/radio_just_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  
                android:layout_marginBottom="5dp"  
                android:text="@string/just_ok" />
            
            <RadioButton
                android:id="@+id/radio_useless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"            
                android:text="@string/useless" />
          
        </RadioGroup>
               
        <LinearLayout
            android:layout_width="match_parent"
	        android:layout_height="@dimen/dialog_button_height"
	        android:layout_marginLeft="@dimen/space_size_18"
            android:layout_marginRight="@dimen/space_size_18"
	        android:layout_marginBottom="@dimen/space_size_20">

	       
	        <Space
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.5" />
	        	        
	        <Button
	            android:id="@+id/button_ok"
	            style="@style/dialog_button"
	            android:layout_width="0dip"
	            android:layout_height="@dimen/dialog_button_height"
	            android:layout_weight="1"
	            android:background="@drawable/selector_dialog_right_btn"
	            android:text="чбошод" />
	        
	        <Space
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.5" />
	       
    	</LinearLayout>
    
</LinearLayout>