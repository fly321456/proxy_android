<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_size_129" >
    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="@dimen/space_size_118"
	    android:orientation="vertical"
	    android:background="@drawable/call_frame_bg">
    <TextView
	    android:id="@+id/call_number"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="@dimen/space_size_22"
	    android:layout_marginBottom="@dimen/space_size_16"
	    android:textColor="#ffffff"
	    android:textSize="@dimen/text_size_18"
	    android:text="13888888888"/>
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <ImageView
	        android:id="@+id/call_hangup"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/call_button_hangup"
	        android:layout_centerVertical="true"
	        android:layout_toLeftOf="@id/call_ignore"
	        android:layout_marginRight="@dimen/space_size_50"/>
	    <ImageView
	        android:id="@+id/call_ignore"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/call_button_ignore"
	        android:layout_centerInParent="true"/>
	    <ImageView
	        android:id="@+id/call_accept"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/call_button_accept"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/call_ignore"
	        android:layout_marginLeft="@dimen/space_size_50"/>
	</RelativeLayout>  
	</LinearLayout>
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/call_frame_icon"/>
</RelativeLayout>
