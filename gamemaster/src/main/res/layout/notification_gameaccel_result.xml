<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_size_7"
        android:layout_marginRight="@dimen/space_size_7"
        android:scaleType="centerInside"
        android:src="@drawable/notify_icon_normal_big" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/space_size_4"
        android:layout_marginTop="@dimen/space_size_4"
        android:layout_toRightOf="@+id/image_icon"
        android:text="TextView"
        android:textSize="@dimen/text_size_18" />

    <ImageView
        android:id="@+id/image_gameicon"
        android:layout_width="@dimen/space_size_25"
        android:layout_height="@dimen/space_size_25"
        android:layout_alignLeft="@+id/text_title"
        android:layout_below="@+id/text_title"
        android:layout_marginRight="@dimen/space_size_4"
        android:layout_marginTop="@dimen/space_size_3" />

    <TextView
        android:id="@+id/text_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_gameicon"
        android:layout_toRightOf="@+id/image_gameicon"
        android:text="@string/gameaccel_result_delay"
        android:textSize="@dimen/text_size_13" />

</RelativeLayout>